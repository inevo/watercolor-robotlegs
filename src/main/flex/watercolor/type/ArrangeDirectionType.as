package watercolor.type
{

	/**
	 * Class containing direction the Arrange Command can go.
	 * 
	 * @author Sean Thayne
	 */
	public class ArrangeDirectionType
	{
		/**
		 * Move element position to the top.
		 */
		public static const TOP:String = "arrangeDirectionTypeTop";

		/**
		 * Move element position up one.
		 */
		public static const UP:String = "arrangeDirectionTypeUp";

		/**
		 * Move element position down one.
		 */
		public static const DOWN:String = "arrangeDirectionTypeDown";

		/**
		 * Move element position to the bottom.
		 */
		public static const BOTTOM:String = "arrangeDirectionTypeBottom";
	}
}